{
  "name": "@toilet-paper-games/core",
  "version": "0.0.12",
  "author": "Justin Fernald",
  "homepage": "https://Toilet-Paper-Games.github.io/core",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/tp-games-lib.main.es.js",
      "require": "./dist/tp-games-lib.main.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./math": {
      "import": "./dist/tp-games-lib.math.es.js",
      "require": "./dist/tp-games-lib.math.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/tp-games-lib.cjs.js",
  "module": "dist/tp-games-lib.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn run generate-barrels && vite build",
    "test": "vitest",
    "test:ui": "vitest --coverage --ui",
    "coverage": "vitest run --coverage",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:format": "prettier . --list-different --write",
    "lint": "yarn lint:format && yarn lint:fix ",
    "lint:pre-commit": "eslint . --max-warnings=0",
    "type-check": "tsc",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "generate-barrels": "barrelsby --delete -d ./src ./src/common/utils/math -e vite-env.d.ts"
  },
  "dependencies": {
    "firebase": "^10.7.2",
    "mobx": "^6.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.53",
    "@types/react-dom": "^18.2.18",
    "@types/w3c-generic-sensor": "^1.0.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.1",
    "barrelsby": "^2.8.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jsdom": "^23.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2"
  },
  "pre-commit": "lint:pre-commit",
  "license": "UNLICENSED"
}
