{
  "name": "@toilet-paper-games/core",
  "version": "0.0.1",
  "author": "Justin Fernald",
  "homepage": "https://Toilet-Paper-Games.github.io/core",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/tp-games-lib.main.es.js",
      "require": "./dist/tp-games-lib.main.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./math": {
      "import": "./dist/tp-games-lib.math.es.js",
      "require": "./dist/tp-games-lib.math.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/tp-games-lib.cjs.js",
  "module": "dist/tp-games-lib.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn run generate-barrels && vite build",
    "test": "vitest",
    "test:ui": "vitest --coverage --ui",
    "coverage": "vitest run --coverage",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:format": "prettier . --list-different --write",
    "lint": "yarn lint:format && yarn lint:fix ",
    "lint:pre-commit": "eslint . --max-warnings=0",
    "type-check": "tsc",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "generate-barrels": "barrelsby --delete -d ./src ./src/common/utils/math -e vite-env.d.ts"
  },
  "dependencies": {
    "firebase": "^9.22.0",
    "mobx": "^6.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@types/node": "^20.1.0",
    "@types/react": "^18.2.3",
    "@types/react-dom": "^18.0.11",
    "@types/w3c-generic-sensor": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "barrelsby": "^2.8.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.10",
    "jsdom": "^22.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-dts": "^2.3.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.6"
  },
  "pre-commit": "lint:pre-commit",
  "license": "UNLICENSED"
}
